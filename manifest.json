{
  "manifest_version": 2,
  "name": "nanotube",
  "short_name": "nanotube",
  "version": "1.0.0",
  "description": "",
  "author": "Deliaz",
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}